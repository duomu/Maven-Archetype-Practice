<?xml version="1.0" encoding="UTF-8"?>
<demo-descriptor name="app-server">
    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**</include>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**</include>
                <include>**/*.**</include>
            </includes>
            <excludes>
                <include>__artifactId__-resources</include>
                <include>__artifactId__-resources/*.**</include>
                <include>META-INF</include>
                <include>maven</include>
                <include>META-INF/maven/*.**</include>
            </excludes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**</include>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**</include>
                <include>**/*.**</include>
            </includes>
        </fileSet>
    </fileSets>
</demo-descriptor>